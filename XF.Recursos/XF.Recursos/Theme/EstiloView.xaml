<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XF.Recursos.Theme.EstiloView"
             HeaderFIAP="{Binding HeaderFIAP}"
             FooterFIAP="{Binding FooterFIAP}">

    <ContentView x:Name="contentView" ControlTemplate="{StaticResource FuchsiaTemplate}">
        <StackLayout Margin="0,20,0,0">
            <Label Text="Layout Personalizado" FontAttributes="Bold" HorizontalOptions="Center" />
            <BoxView BackgroundColor="Maroon" HeightRequest="1" />
            <Label Text="Superior" TextColor="Fuchsia" BackgroundColor="#DFD8D7" VerticalOptions="StartAndExpand" />
            <BoxView BackgroundColor="Maroon" HeightRequest="1" />
            <Label Text="Centralizado" TextColor="Fuchsia" BackgroundColor="#DFD8D7" VerticalOptions="CenterAndExpand" />
            <BoxView BackgroundColor="Maroon" HeightRequest="1" />
            <Label Text="Inferior" TextColor="Fuchsia" BackgroundColor="#DFD8D7" VerticalOptions="EndAndExpand" />
            <BoxView BackgroundColor="Maroon" HeightRequest="1" />
            <Label Text="Expandir" TextColor="Fuchsia" BackgroundColor="#DFD8D7" VerticalOptions="FillAndExpand" />
            <BoxView BackgroundColor="Maroon" HeightRequest="1" />
        </StackLayout>
    </ContentView>

</ContentPage>